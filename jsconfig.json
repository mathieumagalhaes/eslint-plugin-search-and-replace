{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  },
  "parserOptions": {
    "sourceType": "module",
  },
  "include": [
    "eslint.config.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}
